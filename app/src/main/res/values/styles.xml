<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/Twitch_3</item>
        <item name="colorPrimaryDark">@color/Twitch_4</item>
        <item name="colorAccent">@color/Twitch_1</item>

        <item name="android:windowBackground">@color/Twitch_3</item>
        <item name="android:colorBackground">@color/Twitch_3</item>
        <item name="android:statusBarColor">?android:attr/colorBackground</item>

        <!-- No Title Bar-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/Twitch_3</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/Twitch_1</item>
        <!-- Used for the background -->
        <item name="android:background">@color/Twitch_5</item>
    </style>

    <style name="CustomTheme_1" parent="Theme.AppCompat.NoActionBar" >
        <item name="colorPrimary">@color/Theme1_0</item>
        <item name="android:colorBackground">@color/Theme1_0</item>\
        <item name="colorPrimaryDark">@color/Theme1_0_0</item>
        <item name="android:textColorPrimary">@color/Theme1_1</item>
        <item name="android:textColorSecondary">@color/Theme1_1_1</item>
        <item name="android:colorAccent">@color/Theme1_2</item>
        <item name="android:statusBarColor">?android:attr/colorBackground</item>
    </style>

    <style name="CustomTheme_2" parent="Theme.AppCompat.NoActionBar" >
        <!--<item name="android:background">@color/Theme4_0</item>-->
        <item name="colorPrimary">@color/Theme4_0</item>
        <item name="android:colorBackground">@color/Theme4_0</item>
        <item name="colorPrimaryDark">@color/Theme4_0_1</item>
        <item name="android:textColorPrimary">@color/Theme4_1</item>
        <item name="android:textColorSecondary">@color/Theme4_1_0</item>
        <item name="colorAccent">@color/Theme4_2</item>
        <item name="android:statusBarColor">?android:attr/colorBackground</item>
    </style>

    <style name="CustomTheme_3" parent="Theme.AppCompat.NoActionBar" >
        <item name="colorPrimary">@color/Theme5_0</item>
        <item name="android:colorBackground">@color/Theme5_0</item>
        <item name="colorPrimaryDark">@color/Theme5_0_1</item>
        <item name="android:textColorPrimary">@color/Theme5_1</item>
        <item name="android:textColorSecondary">@color/Theme5_1_0</item>
        <item name="colorAccent">@color/Theme5_2</item>
        <item name="android:statusBarColor">@android:color/black</item>
    </style>
</resources>